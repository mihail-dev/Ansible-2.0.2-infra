Vagrant.configure(2) do |config|
  config.vm.define "ansible", primary: true do |ansible|
    ansible.vm.box = "puppetlabs/centos-7.2-64-puppet"
    ansible.vm.network "private_network", ip: "192.177.0.7"
    # Keep default ssh keys
    ansible.ssh.insert_key = false
    ansible.vm.provision "shell", inline: <<-SHELL
      echo Provision Ansible
      yum install -y epel-release && yum install -y ansible
      echo Configure Ansible
      # Add develop1 host to inventory
      echo "[develop]" >> /etc/ansible/hosts
      echo "develop1" >> /etc/ansible/hosts
      mkdir /etc/ansible/host_vars
      cat <<EOT >> /etc/ansible/host_vars/develop1
---
ansible_host: 192.177.0.8
ansible_user: vagrant
ansible_ssh_private_key_file: /home/vagrant/key.pem
EOT
      echo Choose scp over sftp
      sed -i s/'#scp_if_ssh = True'/'scp_if_ssh = True'/g /etc/ansible/ansible.cfg
      echo Provision vim
      yum install -y vim
      echo Setup private key for develop host
      echo "#{$private_key}" > /home/vagrant/key.pem
      chown 400 /home/vagrant/key.pem
      SHELL
  end

  config.vm.define "develop" do |develop|
    develop.vm.box = "puppetlabs/centos-7.2-64-puppet"
    develop.vm.network "private_network", ip: "192.177.0.8"
    # Keep default ssh keys
    develop.ssh.insert_key = false
  end

  # Share an additional folder to the guest VM. The first argument is
  # the path on the host to the actual folder. The second argument is
  # the path on the guest to mount the folder. And the optional third
  # argument is a set of non-required options.
  # config.vm.synced_folder "../data", "/vagrant_data"

end
